@model Project.Models.Menu

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận thêm menu</h2>
    </div>
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Thêm</h2>
        </div>
        <form method="post">
            <div bsp-validation-summary="All"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="MenuName">Tên</label>
                    <input type="text" class="form-control mb-3" asp-for="MenuName" placeholder="Nhập câu hỏi">
                    <span asp-validation-for="MenuName" class="alert-danger"></span>
                </div>
            </div>
            

            
            <div class="form-group col-md-6">
                <label asp-for="ParentId">Chọn menu cha</label>
                <select asp-for="ParentId" class="form-control" asp-items="@(new SelectList(ViewBag.parentList,"Value","Text"))"></select>
                <span asp-validation-for="ParentId" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="MenuOrder">Chọn vị trí</label>
                <select asp-for="MenuOrder" class="form-control" asp-items="@(new SelectList(ViewBag.menuOrderList,"Value","Text"))"></select>
                <span asp-validation-for="MenuOrder" class="alert-danger"></span>
            </div>
            <div class="form-row">

                <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-pluss-fill"></i>Lưu</button>
                <a asp-controller="Question" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
            </div>
        </form>
    </div>
</main>