@model Project.Models.Question

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận thêm câu hỏi</h2>
    </div>
    <div class="container shadow p-5">
        <div class="row pb-2">
            <h2>Thêm</h2>
        </div>
        <form method="post">
            <div bsp-validation-summary="All"></div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="QuestionText">Câu hỏi</label>
                    <input type="text" class="form-control mb-3" asp-for="QuestionText" placeholder="Nhập câu hỏi">
                    <span asp-validation-for="QuestionText" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="OptionA">Đáp án A</label>
                    <input type="text" class="form-control mb-3" asp-for="OptionA" placeholder="Nhập đáp án A">
                    <span asp-validation-for="OptionA" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="OptionB">Đáp án B</label>
                    <input type="text" class="form-control mb-3" asp-for="OptionB" placeholder="Nhập đáp án B">
                    <span asp-validation-for="OptionB" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="OptionC">Đáp án C</label>
                    <input type="text" class="form-control mb-3" asp-for="OptionC" placeholder="Nhập đáp án C">
                    <span asp-validation-for="OptionC" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="OptionA">Đáp án D</label>
                    <input type="text" class="form-control mb-3" asp-for="OptionD" placeholder="Nhập đáp án D">
                    <span asp-validation-for="OptionD" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CorrectOption">Chọn đáp án đúng</label>
                <select asp-for="CorrectOption" class="form-control" asp-items="@(new SelectList(ViewBag.AnswerList,"Value","Text"))"></select>
                <span asp-validation-for="CorrectOption" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CorrectOption">Chọn Chương</label>
                <select asp-for="CorrectOption" class="form-control" asp-items="@(new SelectList(ViewBag.ChapterList,"Value","Text"))"></select>
                <span asp-validation-for="CorrectOption" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="SubjectId">Chọn Môn học</label>
                <select asp-for="SubjectId" class="form-control" asp-items="@(new SelectList(ViewBag.subjectList,"Value","Text"))"></select>
                <span asp-validation-for="SubjectId" class="alert-danger"></span>
            </div>
            <div class="form-row">

                <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-pluss-fill"></i>Lưu</button>
                <a asp-controller="Question" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
            </div>
        </form>
    </div>
</main>