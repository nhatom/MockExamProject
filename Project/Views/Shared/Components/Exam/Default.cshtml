                            <small class="fa fa-star text-primary"></small>
                            <small class="fa fa-star text-primary"></small>
                            <small class="fa fa-star text-primary"></small>
                            <small class="fa fa-star text-primary"></small>
                            <small class="fa fa-star text-primary"></small>
                            <small>(123)</small>
                        </div>
                    </div>
                    <div class="text-center p-2 border-top">
                        <div class="col-lg-6 d-inline-block">
                            <small class="me-2"><i class="fa fa-user-tie text-primary me-2"></i>@item.CreatedBy</small>
                            <small class="me-2"><i class="fa fa-clock text-primary me-2"></i>@item.Time phút</small>
                            <small class="me-2"><i class="fa fa-user text-primary me-2"></i>@item.NumberOfQuestion câu hỏi</small>
                        </div>
                        <div class="col-lg-2 d-inline-block ms-3" style="float: right;">
                            <a href="/@url" class="btn btn-sm btn-primary px-3 border-end" style="border-radius: 50px;">Thi thử</a>
                        </div>
                    </div>
                </div>
            }
