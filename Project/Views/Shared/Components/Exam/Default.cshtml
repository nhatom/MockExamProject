    </div>


    <div class="row g-4 justify-content-center">
        <div class="col-lg-8 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
            @foreach (var item in Model)
            {
                string url = Functions.TitleSlugGeneration("exam", item.ExamName, item.ExamId);
                <div class="course-item bg-light" style="margin-bottom: 20px;">
                    <div class="text-center p-2">
                        <h5 class="col-lg-6 mb-4 d-inline">@item.ExamName</h5>
