                        <h5 class="col-lg-6 mb-4 d-inline">Học phần</h5>
                        <div class="col-lg-2 d-inline-block ms-3" style="float: right;">
                            <h5>Số đề thi</h5>
                        </div>
                    </div>
                    @foreach (var item in Model)
                    {
                        <div class="text-center p-2 border-top">
                            <div class="col-lg-6 d-inline-block">
                                <select asp-for="@item.SubjectId" class="form-control" asp-items="@(new SelectList(ViewBag.mnList, "Value", "Text"))" disabled></select>
                            </div>
                            <div class="col-lg-2 d-inline-block ms-3" style="float: right;">
                                <h6 style="font-weight: normal; color: #06BBCC;">5</h6>
